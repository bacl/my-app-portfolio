<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <stroke android:width="1dip" android:color="#ff006ac7" />
            <gradient  android:angle="-90"  android:startColor="#1565C0" android:endColor="#2196F3"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <stroke android:width="1dip" android:color="#1565C0" />
            <solid  android:color="#2196F3"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <stroke android:width="1dip" android:color="#0D47A1" />
            <gradient  android:angle="-90"  android:startColor="#2196F3" android:endColor="#1565C0" />
        </shape>
    </item>
</selector>